{
	"name": "CSSViewer",
	"manifest_version": 3,
	"version": "1.7",

	"description": "A simple CSS property viewer.",

	"icons": {
		"16": "img/16.png",
		"22": "img/22.png",
		"24": "img/24.png",
		"32": "img/32.png",
		"48": "img/48.png"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"run_at": "document_start",
		"css": ["css/cssviewer.css"],
		"js": ["js/cssviewer.js"],
		"all_frames": true
	}],
	"options_page": "option.html",
	"background": { "service_worker": "js/background.js"},

	"action": {
		"default_icon": "img/16.png",
		"default_title": "Click to Run CSS Scanner"
	},
	"permissions": [
		"tabs",
		"contextMenus",
		"storage",
		"scripting"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*",
		"file://*/*"
	],
	"web_accessible_resources": [{
		"resources": [
		"img/trash.svg", "img/copy.svg", "img/code.svg",
		"img/size.svg", "img/font.svg", "img/close.svg",
		"img/options.svg", "img/pause.svg", "img/play.svg",
		"img/arrow_down.svg"], 
		"matches": ["<all_urls>"]	
	}]
}